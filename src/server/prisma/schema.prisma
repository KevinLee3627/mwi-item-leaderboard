// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Player {
  id          Int      @id
  displayName String
  Record      Record[]
}

model Item {
  hrid             String   @id
  displayName      String
  enhancementLevel Int?
  Record           Record[]
}

model Record {
  ts       DateTime
  num      Int
  item     Item     @relation(fields: [itemId], references: [hrid])
  itemId   String
  player   Player   @relation(fields: [playerId], references: [id])
  playerId Int

  @@id([itemId, playerId])
}
